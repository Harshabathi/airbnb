<%- layout("./layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h2 class=" text-center"> Sign-Up</h2>
        <form method="post" action="http://localhost:8080/users/register" class="needs-validation" novalidate>
            <div class="mt-3">
                <label for="mail" class="form-label">Email</label>
                <input type="email" placeholder="abc@gmail.com" id="mail" class="form-control" name="email" required>
                <div clas="valid-feedback"></div>
            </div>
            <div class="mt-3">
                <label for="user" class="form-label">Username</label>
                <input type="text" placeholder="John-doe" id="user" class="form-control" name="username" required>
                <div class="invalid-feedback">Enter Username/Username does not exist</div>
            </div>
            <div class="mt-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" placeholder="Enter password" id="password" class="form-control" name="password" required>
                <div class="invalid-feedback">Enter Strong Password</div>
            </div>
            <button class="btn btn-outline-secondary mt-3 add-btn">Submit</button>
        </form>
    </div>

   
</div>
