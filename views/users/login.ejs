<%- layout("./layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h2 class=" text-center"> Login </h2>
    <form method="POST" action="/users/login" class="needs-validation" novalidate>
      <div class="mt-3">
        <label for="user" class="form-label">Username</label>
        <input type="text" placeholder="John-doe" id="user" class="form-control" name="username" required>
        <div class="invalid-feedback">Enter Username/Username does not exist</div>
      </div>
      <div class="mt-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" placeholder="Enter password" id="password" class="form-control" name="password" required>
        <div class="invalid-feedback">Enter Strong Password</div>
      </div>
      <div class="d-flex justify-content-center gap-3 mt-4 mb-3">
        <button type="submit" class="btn btn-sm btn-outline-success">Submit</button>
      </div>
    </form>
  </div>
</div>
