<%- layout("./layouts/boilerplate.ejs") %>


<div class="container mt-4">
  <h3 class="mb-4 text-center">All Listings</h3>
  
  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for (let list of alllistings) { %>
     <a href="/listings/<%=list._id%>" class="list-link">
      <div class="col">
        <div class="card h-100 shadow-sm listing-card">
          <img src="<%= list.image.url %>" class="card-img-top card-img-fixed" alt="Image">
          <div class="card-img-overlay"></div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= list.title %></h5>
            <p class="card-text text-muted"><%= list.description %></p>
            <p class="mt-auto text-success"><strong>â‚¹<%= list.price %></strong></p>
            <p class="text-secondary"><%= list.location %>, <%= list.country %></p>
          </div>
        </div>
      </div>
     </a>
    <% } %>
  </div>
</div>
