<%layout("./layouts/boilerplate.ejs")%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>ADD YOUR NEW PLACE</h3>
                <br>
                <form method="Post" action="/listings" class="needs-validation"novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                        <div class="valid-feedback">Title looks good</div> 
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Tell us about the place" rows="10" cols="50"
                            class="form-control" required></textarea>
                         
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="text" name="listing[image][url]" placeholder="Image URL" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="2000" class="form-control" required>
                        <div class="invalid-feedback">Enter valid price</div>
                        
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input name="listing[location]" placeholder="Visakhapatnam,Andhra Pradesh" class="form-control" required>
                                <div class="invalid-feedback">Enter valid location</div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="Country" class="form-label">Country</label>
                                <input name="listing[country]" placeholder="India" class="form-control" required>
                                <div class="invalid-feedback">Enter valid country</div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-dark add-btn">Submit</button>
                </form>
                <br><br>
            </div>
        </div>
    </body>